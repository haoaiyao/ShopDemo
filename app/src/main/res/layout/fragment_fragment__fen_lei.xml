<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Fragment_FenLei">

    <RelativeLayout
        android:id="@+id/RLsousuo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:layout_margin="@dimen/x30"
        android:background="@drawable/sousuoback">

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_toLeftOf="@id/SOusuo_tv1"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_action_action_search" />
        android:layout_toLeftOf="@id/SOusuo_quxiao"
        android:background="@drawable/sousuoback"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/SOusuo_image"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_toLeftOf="@id/SOusuo_ed1"
            android:background="@drawable/sousuoback"></ImageView>

        <EditText
            android:id="@+id/SOusuo_ed1"
            android:layout_width="@dimen/x300"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/SOusuo_tv1"
            android:layout_width="@dimen/x300"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sosuotitle" />
    </RelativeLayout>
</RelativeLayout>